<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="menu_netaddiction_product_bonus"
            name="Bundle"
            parent="base.menu_product"
            action="mrp.mrp_bom_form_action"
            sequence="5"/>

        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="ean13" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="default_code" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="replace">
                    <field name="product_tmpl_id" required="False"/>
                </field>
                <xpath expr="//notebook/page[@string='Procurements']/separator[@string='Description for Suppliers']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Procurements']/separator[@string='Suppliers']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//notebook/page[@string='Procurements']" position="attributes">
                    <attribute name="string">Fornitore</attribute>
                </xpath>
                <group name="procurement" position="attributes">
                    <attribute name="invisible">True</attribute>
                </group>
                <field name="ean13" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="description_purchase" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="seller_ids" position="replace">
                    <field name="seller_ids" mode="tree">
                        <tree>
                            <field name="name"/>
                            <field name="product_code"/>
                            <field name="avail_qty"/>
                            <field name="base_price"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

        <!--product.product tree view-->
        <record model="ir.ui.view" id="doozy_product_product_tree__view">
            <field name="name">product.product.doozy.tree.view</field>
            <field name="model">product.product</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="colors">
                        red:virtual_available &lt; 0;
                        #003300:virtual_available &gt; 0 and qty_available_now &lt; 0;
                        #800000:is_bonus == True
                    </attribute>
                </tree>
                <field name="uom_id" position="replace">
                </field>
                <field name="ean13" position="replace">
                </field>
                <field name="lst_price" position="before">
                    <field name="final_price"/>
                </field>
                <field name="virtual_available" position="after">
                    <field name="qty_available_now"/>
                    <field name="active" />
                    <field name="published" />
                    <field name="is_bonus" invisible="True"/>
                </field>
            </field>
        </record>


        <!--fine inherit product tree-->
        <record model="ir.actions.act_window" id="kanban_product_variant_action">
            <field name="name">Varianti Prodotti</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_product_tmpl_id': [active_id], 'default_product_tmpl_id': active_id}</field>
            <field name="domain">['|',('active','=',True),('active','=',False)]</field>
        </record>

        <record model="ir.ui.view" id="doozy_product_template_kanban">
            <field name="name">doozy.product.template.product.kanban</field>
            <field name="model">product.template</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t/div/div/h4/a[@type='open']" position="replace">
                    <a type="open">
                        <field name="name"/>
                    </a>
                </xpath>
                <xpath expr="//kanban/templates/t/div/div/h4" position="after">
                    <div>
                        <field name="categ_id"/>
                    </div>
                </xpath>
                <xpath expr="//kanban/templates/t/div/div/a[@type='action']" position="replace">
                    <a name="%(kanban_product_variant_action)d" type="action">
                         <t t-esc="record.product_variant_count.value"/> Varianti
                    </a>
                </xpath>
                <xpath expr="//kanban/templates/t/div/div/div[@name='tags']" position="replace"/>

                <xpath expr="//kanban/templates/t/div/div/ul" position="replace">
                    <ul>
                        <li> Quantit√† Totale: <field name="qty_available"/></li>
                    </ul>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="doozy_product_template_tree_view">
            <field name="name">doozy.product.template.product.tree</field>
            <field name="model">product.template</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="uom_id" position="replace">
                </field>
                <field name="state" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="qty_available" position="replace">
                </field>
                <field name="virtual_available" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>


    </data>
</openerp>
