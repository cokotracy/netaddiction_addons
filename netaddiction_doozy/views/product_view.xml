        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="ean13" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="ean13" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <!--sopra è per il template, questo è per la variante-->
        <record model="ir.ui.view" id="doozy_view_product_form">
            <field name="name">product.product.netaddiction.doozy.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="ean13" position="replace">
                    <field name="ean13" attrs="{'invisible': True}"/>
                </field>
            </field>
        </record>

        <!--product.product tree view-->
        <record model="ir.ui.view" id="doozy_product_product_tree__view">
            <field name="name">product.product.doozy.tree.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="uom_id" position="replace">
                </field>
                <field name="default_code" position="replace">
                </field>
            </field>
        </record>
