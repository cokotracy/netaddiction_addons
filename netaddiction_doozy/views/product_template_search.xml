<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="doozy_product_template_search_view">
            <field name="name">product.template.search.doozy</field>
            <field name="model">product.template</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <filter name="components" position="replace">
                     <filter string="Bundle" name="components" icon="terp-accessories-archiver" domain="[('bom_ids','not in',[])]"/>
                </filter>
                <filter name="real_stock_available" position="replace"/>
                <filter name="virtual_stock_available" position="replace"/>
                <filter name="real_stock_exhausted" position="replace"/>
                <filter name="virtual_stock_exhausted" position="replace"/>
                <filter name="real_stock_negative" position="replace"/>
                <filter name="virtual_stock_negative" position="replace"/>
            </field>
        </record>
    </data>
</openerp>
