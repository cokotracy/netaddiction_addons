<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="netaddiction_view_partner">
            <field name="name">res.partner.netaddiction.extrafields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
    

            
            <xpath expr="//sheet/group/group" position="replace" t-if="record.parent_id.raw_value === False &amp;&amp; record.customer.raw_value === True">
                <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>

                                  <field name="is_default_delivery_address"
                            attrs="{'invisible':[('type', '!=', 'delivery')]}"/>
                                <field name="company_address" string="Azienda" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                                <field name="street" string="Indirizzo" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                                <field name="street2" string="Civico" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                                <field name="city" string="Città" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                                <field name="state_id" string="Provincia" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" on_change="onchange_state(state_id)" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                                <field name="zip" string="CAP" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                                <field name="country_id" string="Nazione" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],'invisible':[('parent_id','=', False)]}"/>
                        
                            <field name="website" widget="url" placeholder="e.g. www.odoo.com" attrs="{'invisible':True}"/>
                           
                </xpath>
                  <xpath expr="//sheet/group/group[field[@name='mobile']]" position="replace" t-if="record.parent_id.raw_value === False &amp;&amp; record.customer.raw_value === True">
                      <field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])],'invisible':[('parent_id','!=', False)]}"/>
                      <field name="phone" widget="phone" attrs="{'invisible':[('parent_id','!=', False)]}"/>
                            <field name="mobile" widget="phone" attrs="{'invisible':[('parent_id','!=', False)]}"/>
                            <field name="rating"  attrs="{'invisible':[('parent_id','!=', False)]}" />
                            <field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': True}"/>
                            <field name="affiliate_id" attrs="{'invisible': ['|',('parent_id', '!=', False),('affiliate_id', '=',False )]}"/>
                            <field name="got_gift" invisible="1"/>
                            <field name="gift_ids"  attrs="{'invisible': ['|',('parent_id', '!=', False),('got_gift', '=',False)]}"/>
                            <field name="total_gift" />
                            <field name="user_ids" invisible="1"/>
                            <field name="category_id" widget="many2many_tags" placeholder="Tags..."  attrs="{'invisible':True}"/>
                  </xpath>

          


                <xpath expr="//field[@name='child_ids']/form/sheet/group/group/field[@name='function']"
                    position="replace">    
                    <div>                    
                        <field name="function"  attrs="{'invisible':True}"/>
                        <label for="function"  attrs="{'invisible':True}"/>
                    </div>
                </xpath> 
                 <xpath expr="//field[@name='child_ids']/form/sheet/group/group/field[@name='email']"
                    position="replace">    
                    <div>                    
                        <field name="email"  attrs="{'invisible':True}"/>
                        <label for="email"  attrs="{'invisible':True}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/group/field[@name='phone']"
                    position="replace">    
                    <div>                    
                        <field name="phone"  attrs="{'invisible':True}"/>
                        <label for="phone"  attrs="{'invisible':True}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/group/field[@name='mobile']"
                    position="replace">    
                    <div>                    
                        <field name="mobile"  attrs="{'invisible':True}"/>
                        <label for="mobile"  attrs="{'invisible':True}"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='child_ids']/kanban/field[@name='name']"
                    position="after">

                    <div>
                        <field name="is_default_delivery_address" attrs="{'invisible':[('parent_id', '=', False)]}"/>
                        <label for="is_default_delivery_address" attrs="{'invisible':[('parent_id', '=', False)]}"/>
                    </div>
                </xpath>
               

                <xpath expr="//field[@name='child_ids']/kanban/templates/t[@t-name='kanban-box']/div/div/field[@name='name']" position="before">
                    <field name="is_default_delivery_address" invisible="1"/>
                    <div>
                    <h5 attrs="{'invisible':[('is_default_delivery_address', '=', False)],}" >
                        <font color="blue">INDIRIZZO DI DEFAULT </font></h5>
                  
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/kanban/templates/t[@t-name='kanban-box']/div/div[@class='o_kanban_image']" position="replace">
                    <div class="o_kanban_image">
                        <img t-if="record.type.raw_value === 'delivery'" t-att-src="_s + &quot;/base/static/src/img/truck.png&quot;"/>
                        <img t-if="record.type.raw_value === 'invoice'" t-att-src="_s + &quot;/base/static/src/img/money.png&quot;"/>
                        <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                            <img t-if="record.is_company.raw_value === true" t-att-src="_s + &quot;/base/static/src/img/company_image.png&quot;"/>
                            <img t-if="record.is_company.raw_value === false" t-att-src="_s + &quot;/base/static/src/img/avatar.png&quot;"/> 
                        </t>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group" position="before">
                    <div>
                        <field name="is_default_delivery_address" />
                        <label for="is_default_delivery_address" />
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group" position="replace">
                    <group attrs="{'invisible': [('type','=', 'contact')]}">

                        <field name="name" string="Nome" />
                        <field name="company_address" string="Azienda" />

                        <field name="street" string="Indirizzo"/>

                        <field name="street2" string="Civico" />

                        <field name="city" string="Città"/>
                        <field name="state_id" string="Provincia" />
                        <field name="zip" string="CAP" />
                        <field name="country_id" string="Nazione"/>

                    </group> 
                </xpath>

                <xpath expr="//page[@name='sales_purchases']/group/group/field[@name='user_id']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>

                <xpath expr="//page[@name='sales_purchases']/group/group[field[@name='ref']]" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
            </field>
    
        </record>

        <record model="ir.ui.view" id="netaddiction_view_partner_accounting">
            <field name="name">res.partner.netaddiction.customers1</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']/group/group[@name='acc_sale']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
            <xpath expr="//page[@name='accounting']/group/group[@name='acc_purchase']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
            <xpath expr="//page[@name='accounting']/group/group[@name='accounting_entries']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
                        <xpath expr="//page[@name='accounting']/group/group[@name='accounting_entries']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
                          <xpath expr="//page[@name='accounting']/group/group[@name='fiscal_information']/field[@name='property_account_position_id']" position="attributes">
                        <attribute name="attrs">{'invisible': [('customer', '=', True)]}</attribute>
            
                </xpath>
            </field>
        </record>
    </data>
</openerp>
