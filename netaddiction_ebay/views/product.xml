<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="ebay_product_normal_form_view" model="ir.ui.view">
            <field name="name">netaddiction.ebay.product.form</field>
            <field name="model">product.product</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="netaddiction_products.product_normal_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                  
                   <button name="toggle_ebay" type="object" string="eBay"
                                    class="oe_stat_button" icon="fa-edge">
                                <field name="on_ebay" widget="boolean_button"
                                   />
                            </button>
                </xpath>



            <xpath expr="//page[@name='vendor_netaddiction']" position='after'>  
            <page string="eBay" name="ebay_netaddiction">

                    
                       



                        <group  name="ebay_data" colspan="2" >
                            <group name="loc_left" class="oe_left" col="2">
                     
                               <field name="ebay_id" attrs="{'readonly': 1}"/>
                               <field name="ebay_price" />
                               <field name="set_ebay_price" />
            

                             </group>

                            <group name="loc_right" class="oe_right" col="2">
    
                               <field name="ebay_published_date" attrs="{'readonly': 1}"/>
                               <field name="ebay_expiration_date" attrs="{'readonly': 1}"/>
                               <field name="ebay_selled" attrs="{'readonly': 1}"/>

                             
                                
                            </group>
                            
                         </group>
                        
             
            </page>
                </xpath> 


            </field>
            </record>


    </data>
</openerp>