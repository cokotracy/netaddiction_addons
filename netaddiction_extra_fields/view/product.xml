<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_form">
            <field name="name">product.product.netaddiction.extrafields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="replace">
                    <field name="final_price"/>
                    <field name="lst_price" readonly="True" />
                </field>
                <field name="lst_price" position="after">
                    <field name="out_date"/>
                    <field name="out_date_approx_type" />
                </field>
                <field name="active" position="replace">
                    <field name="active"/>
                    <field name="published"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_template_form">
            <field name="name">product.template.netaddiction.extrafields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="out_date"/>
                    <field name="out_date_approx_type" />
                </field>
                <field name="active" position="replace">
                    <field name="active"/>
                    <field name="published"/>
                </field>
                <xpath expr="//separator[@string='Suppliers']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <field name="seller_ids" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_supplierinfo_form_view">
            <field name="name">product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <field name="min_qty" position="after">
                    <field name="avail_qty"/>
                </field>
            </field>
        </record>

        <!--product.product tree view-->
        <record model="ir.ui.view" id="extrafields_product_product_tree__view">
            <field name="name">product.product.extrafields.tree.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="before">
                    <field name="final_price"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
