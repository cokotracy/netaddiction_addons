<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_form">
            <field name="name">product.product.netaddiction.extrafields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="after">
                    <field name="out_date"/>
                    <field name="out_date_approx_type" />
                </field>
                <field name="active" position="replace">
                    <field name="active"/>
                    <field name="published"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_template_form">
            <field name="name">product.template.netaddiction.extrafields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="out_date"/>
                    <field name="out_date_approx_type" />
                </field>
                <field name="active" position="replace">
                    <field name="active"/>
                    <field name="published"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
