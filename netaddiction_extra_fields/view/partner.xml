<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="netaddiction_view_partner">
            <field name="name">res.partner.netaddiction.extrafields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <label for="is_default_delivery_address"
                            attrs="{'invisible':[('parent_id', '=', False)]}"/>
                    <field name="is_default_delivery_address"
                            attrs="{'invisible':[('parent_id', '=', False)]}"/>
                </field>


                <xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='function']"
                    position="replace">    
                    <div>                    
                        <field name="function"  attrs="{'invisible':[('customer', '=', True)]}"/>
                        <label for="function"  attrs="{'invisible':[('customer', '=', True)]}"/>
                    </div>
                </xpath>
                 <xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='email']"
                    position="replace">    
                    <div>                    
                        <field name="email"  attrs="{'invisible':[('customer', '=', True)]}"/>
                        <label for="email"  attrs="{'invisible':[('customer', '=', True)]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='phone']"
                    position="replace">    
                    <div>                    
                        <field name="phone"  attrs="{'invisible':[('customer', '=', True)]}"/>
                        <label for="phone"  attrs="{'invisible':[('customer', '=', True)]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='mobile']"
                    position="replace">    
                    <div>                    
                        <field name="mobile"  attrs="{'invisible':[('customer', '=', True)]}"/>
                        <label for="mobile"  attrs="{'invisible':[('customer', '=', True)]}"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='child_ids']/form/sheet/div/field[@name='use_parent_address']"
                    position="replace">
                    <field name="parent_id" invisible="True"/>
                    <div>
                        <field name="use_parent_address" invisible="True"/>
                        <label for="use_parent_address" invisible="True"/>
                    </div>
                    <div>
                        <field name="is_default_delivery_address" attrs="{'invisible':[('parent_id', '=', False)]}"/>
                        <label for="is_default_delivery_address" attrs="{'invisible':[('parent_id', '=', False)]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/div/label[@for='use_parent_address']"
                    position="replace">
                </xpath>

                <xpath expr="//field[@name='child_ids']/kanban/templates/t[@t-name='kanban-box']" position="inside">
                    <field name="is_default_delivery_address" invisible="1"/>
                    <h4 attrs="{'invisible':[('is_default_delivery_address', '=', False)]}">INDIRIZZO DI DEFAULT</h4>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
