<odoo>
	<template id="products" inherit_id="website_sale.products" name="">
		<xpath expr="//div[@id='wrap']/div[2]/div" position="attributes">
			<attribute name="class" add="d-none" separator=" "/>
		</xpath>
		<xpath expr="//div[@id='products_grid_before']" position="inside">

			<aside style="border: solid 1px #efefef">
				<h4>Filter by Price</h4>
				<!-- <t t-call="website_sale.sort"/> -->
				<div class="product_price_range_slider" style="height:100px;">
					<p>Price Range: <strong class="rangeValues badge"></strong></p>
					<section class="range-slider mb16">
						<input id="slide1" value="1" min="1" max="10000" step="1" type="range"/>
						<input id="slide2" value="100000" min="1" max="100000" step="1" type="range"/>
					</section>
					<a t-att-href="keep('/shop')" class="price_filter btn btn-primary btn-sm mt16 mb16 w-100">Apply Price Filter</a>
				</div>
				<hr/>
				<h4>Filter By</h4>
				<ul>
					<li>
						<a t-att-href="keep('/shop')">
							<i class="fa fa-database"></i>
							Entire Catelog
						</a>
					</li>
					<li>
						<a t-att-href="keep('/shop?filter=immediate_available')">
							<i class="fa fa-check-circle-o"></i>
							Immediate Available
						</a>
					</li>
					<li>
						<a href="#">
							<i class="fa fa-smile-o"></i>
							On Sale
						</a>
					</li>
					<li>
						<a href="#">
							<i class="fa fa-calendar"></i>
							Latest Release
						</a>
					</li>
				</ul>
				<h4>Sort By</h4>
				<ul>
					<t t-foreach="website_sale_sortable" t-as="sortby">
						<li>
	                        <a role="menuitem" rel="noindex,nofollow" t-att-href="keep('/shop', order=sortby[1])" class="dropdown-item">
	                            <span t-raw="sortby[0]"/>
	                        </a>
                    	</li>
                    </t>
				</ul>
			</aside>
		</xpath>
	</template>
</odoo>
