<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template__view_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.nteaddiction.website</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <group name="product_mode">
                    <group string="Delivery Date Addon">
                        <field name="est_date_addon"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>