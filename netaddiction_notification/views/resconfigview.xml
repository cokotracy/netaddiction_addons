<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="netaddiction_notification_configuration" model="ir.ui.view">
            <field name="name">Netaddiction Notification Settings</field>
            <field name="model">netaddiction.notification.settings</field>
            <field name="arch" type="xml">
                <form string="Notifiche Log" class="oe_form_configuration">
                    <header>
                            <button string="Apply"
                              type="object"
                              name="execute"
                              class="oe_highlight" />
                               or
                            <button string="Cancel"
                               type="object"
                               name="cancel"
                               class="oe_link" />
                    </header>

                    <group string="Impostazioni Generali">
                        <field name="default_active"/>
                    </group>

                    <group string="Modelli da Loggare">
                        <field name="default_product_product"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_notification_configuration"
               model="ir.actions.act_window">
           <field name="name">Netaddiction Notification</field>
           <field name="res_model">netaddiction.notification.settings</field>
           <field name="view_mode">form,search</field>
           <field name="target">inline</field>
       </record>

       <menuitem id="menu_notification_config"
                 name="Netaddiction Notification"
                 parent="base.menu_administration"
                 action="action_notification_configuration"
                 sequence="15"/>

    </data>
</openerp>
