<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

        <record id="tax_view_list" model="ir.ui.view">
            <field name="name">octopus.tax.list</field>
            <field name="model">netaddiction_octopus.tax</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="field"/>
                    <field name="code"/>
                    <field name="sale_tax_id"/>
                    <field name="purchase_tax_id"/>
                </tree>
            </field>
        </record>

        <record id="tax_view_form" model="ir.ui.view">
            <field name="name">octopus.tax.form</field>
            <field name="model">netaddiction_octopus.tax</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="supplier_id"/>
                            <field name="field"/>
                            <field name="code"/>
                            <field name="sale_tax_id"/>
                            <field name="purchase_tax_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tax_action" model="ir.actions.act_window">
            <field name="name">Categorie</field>
            <field name="res_model">netaddiction_octopus.tax</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="tax_view_list"/>
        </record>

</data>
</odoo>
