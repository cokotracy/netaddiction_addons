<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="category_view_list" model="ir.ui.view">
        <field name="name">octopus.category.list</field>
        <field name="model">netaddiction_octopus.category</field>
        <field name="arch" type="xml">
            <tree editable="top" >
                <field name="field"/>
                <field name="code"/>
                <field name="type"/>
                <field name="category_id" attrs="{'invisible': [('type', '!=', 'category')]}"/>
                <field name="attribute_id" attrs="{'invisible': [('type', '!=', 'attribute')]}"/>
            </tree>
        </field>
    </record>

    <record id="category_view_form" model="ir.ui.view">
        <field name="name">octopus.category.form</field>
        <field name="model">netaddiction_octopus.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="supplier_id"/>
                        <field name="field"/>
                        <field name="code"/>
                        <field name="type"/>
                        <field name="category_id"/>
                        <field name="attribute_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="category_action" model="ir.actions.act_window">
        <field name="name">Categorie</field>
        <field name="res_model">netaddiction_octopus.category</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="category_view_list"/>
    </record>

</data>
</odoo>
