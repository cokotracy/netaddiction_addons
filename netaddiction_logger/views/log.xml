<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="netaddiction_logger_base">
            <field name="name">Logger</field>
            <field name="res_model">netaddiction.log.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Non ci sono Log.
                </p>
            </field>
        </record>

<record id="view_netaddiction_log"
                model="ir.ui.view">
            <field name="name">netaddiction Log</field>
            <field name="model">netaddiction.log.line</field>
      <field name="arch" type="xml">

            <form string="Log Form" create="false" edit="false">
                    <sheet>
                 

                    <div class="oe_title">
                        <h1> <field name="field" /></h1>
                    </div>

                        <group string="Log">
                            <field name="create_date" readonly="1" />
                           

                            <field name="author_id" />

                            <field name="field_type" />
                            <field name="model_name" />

                            <field name="object_name" />
                            <field name="object_id" />

                            <field name="old_value_integer"  attrs="{'invisible': [('field_type', 'not in', ['integer','boolean','many2one'])]}"/>
                            <field name="old_value_float" attrs="{'invisible': [('field_type', '!=', 'float')]}"/>
                            <field name="old_value_monetary" attrs="{'invisible': [('field_type', '!=', 'monetary')]}"/>

                            <field name="old_value_char" attrs="{'invisible': [('field_type', 'not in', ['char','many2one', 'selection'])]}"/>
                            <field name="old_value_text" attrs="{'invisible': [('field_type', '!=', 'text')]}"/>
                            <field name="old_value_datetime" attrs="{'invisible': [('field_type', 'not in', ['date','datetime'])]}"/>

                            <field name="new_value_integer" attrs="{'invisible': [('field_type', 'not in', ['integer','boolean','many2one'])]}"/>
                            <field name="new_value_float" attrs="{'invisible': [('field_type', '!=', 'float')]}"/>
                            <field name="new_value_monetary" attrs="{'invisible': [('field_type', '!=', 'monetary')]}"/>

                            <field name="new_value_char" attrs="{'invisible': [('field_type', 'not in', ['char','many2one', 'selection'])]}"/>
                            <field name="new_value_text" attrs="{'invisible': [('field_type', '!=', 'text')]}"/>
                            <field name="new_value_datetime" attrs="{'invisible': [('field_type', 'not in', ['date','datetime'])]}"/>



                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_netaddiction_log_menu"
                model="ir.actions.act_window">
            <field name="name">Log</field>
            <field name="res_model">netaddiction.log.line</field>
            <field name="view_mode">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">inline</field>
        </record>

        <record model="ir.ui.view" id="netaddiction_log_tree">
            <field name="name">view.netaddiction_log_tree</field>
            <field name="model">netaddiction.log.line</field>
            <field name="arch" type="xml">
                <tree name="log list" create="false" edit="false">
                            <field name="field" />
                            <field name="field_type" />
                            <field name="model_name" />

                            <field name="object_name" />
                            <field name="object_id" />
                </tree>
            </field>
        </record>


        <menuitem id="menu_netaddiction_log"
          name="Log"
          parent="base.menu_base_partner"
          sequence="18"
          action= "netaddiction_logger_base"
        />



    </data>
</openerp>