<openerp>
    <data>
        <template id="groupon_header_top">
            <head>
                <title>Netaddiction Inventory APP</title>

                <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                <meta http-equiv="content-type" content="text/html, charset=utf-8" />

                <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
                <meta name="format-detection" content="telephone=no" />

                <!--carico il file template dove ho i javascript e i css-->
                <t t-call-assets="web.assets_common"/>
                <t t-call-assets="web.assets_backend"/>
                <link rel="stylesheet" href="/netaddiction_warehouse/static/src/css/style.css" />
                <script type="text/javascript" src="/netaddiction_warehouse/static/src/js/WebHub.js"></script>
                <script type="text/javascript" src="/netaddiction_warehouse/static/src/js/slide_menu.js"></script>
                <script type="text/javascript" src="/netaddiction_groupon/static/src/js/groupon_wave.js"></script>
            </head>
            
        </template>

        <template id="list_wave">
            <t t-call="netaddiction_groupon.groupon_header_top"/>
                <t t-call="netaddiction_warehouse.top_menu">
                    <t t-set="top_title" t-value="'GROUPON PICK UP'"/>
                </t>
                <t t-call="netaddiction_warehouse.slide_menu"/>
                <div id="content">
                    <div t-foreach="waves" t-as="wave" class="block" >
                        <a t-attf-href="/inventory/app/groupon_pick_up/{{wave.id}}" class="wave_link">
                            <div t-attf-class="block_content {{wave.state}}"><b><t t-esc="wave.name"/></b></div>
                        </a>
                    </div>
                </div>
        </template>

        <template id="error_wave">
            <t t-call="netaddiction_groupon.groupon_header_top"/>
                <t t-call="netaddiction_warehouse.top_menu">
                    <t t-set="top_title" t-value="'GROUPON PICK UP'"/>
                </t>
                <t t-call="netaddiction_warehouse.slide_menu"/>
                <div id="content">
                    <p><t t-esc="error"/></p>
                </div>
        </template>

        <template id="groupon_wave">

            <t t-call="netaddiction_groupon.groupon_header_top"/>
                <t t-call="netaddiction_warehouse.top_menu">
                    
                </t>
                <t t-call="netaddiction_warehouse.slide_menu"/>
                <div id="content">
                    <div id="barcode-block">
                        <label for="barcode" id="label_barcode">BARCODE PRODOTTO</label>
                        <input type="text" name="barcode" id="barcode" autocomplete="off"/>
                        <input type="submit" value="CERCA" id="search_barcode"/>
                    </div>
                    <div id="result">
                        <div t-foreach="lists" t-as="l" class="block" >
                            <div class="block_title">
                                <t t-esc="l[0]"/>
                            </div>
                            <div class="block_content">
                                <t t-foreach="l[1]" t-as="prod">
                                    <div class="product_row" t-attf-data-barcode="{{prod['barcode']}}" t-attf-data-pid="{{prod['pid']}}" t-attf-data-shelf="{{l[0]}}" t-attf-data-shelf-id="{{prod['shelf_id']}}">
                                        <a href="#" class="open_image" t-attf-data-pid="{{prod['pid']}}"><b class="qty_for_shelf"><t t-esc="prod['qta']"/></b> x <span class="name_pid"><t t-esc="prod['name']"/></span></a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
        </template>
    </data>
</openerp>