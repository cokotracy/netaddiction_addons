<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="netaddiction_groupon_order_base">
            <field name="name">Ordini Groupon</field>
            <field name="res_model">netaddiction.groupon.sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Non ci sono ordini groupon.
                </p>
            </field>
        </record>

<record model="ir.ui.view" id="netaddiction_groupon_order_tree">
            <field name="name">view.netaddiction_groupon_order_tree</field>
            <field name="model">netaddiction.groupon.sale.order</field>
            <field name="arch" type="xml">
                <tree name="groupon_order list">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_shipping_id"/>
                    <field name="groupon_number"/>
                    <field name="groupon_order_date"/>
                    <field name="groupon_cost"/>
                    <field name="groupon_sell_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_special_offers_catalog_form">
            <field name="name">view.netaddiction_groupon_order_form</field>
            <field name="model">netaddiction.groupon.sale.order</field>
            <field name="arch" type="xml">
                <form string="groupon_order Form">
                     <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                    </header>
                    <sheet>
                   
                        <h1><field name="name"/></h1>
                        <group name="so_cat" colspan="4">
                            <group name="loc_left" class="oe_left" col="2">
                                <field name="partner_shipping_id"/>
                                <field name="partner_invoice_id"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="wave_id"/>
                             
                            
                            </group>
                             <group name="groupon" class="oe_right" col="2">
                                <field name="groupon_order_date" widget="datetime"/>
                                <field name="groupon_number"/>
                                <field name="groupon_cost"/>
                                <field name="groupon_sell_price"/>
                                
                            </group>
                        </group>
                        <group string="Spedizioni" name="shipping_ids">
                            <field name="picking_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="min_date"/>
                                    <field name="picking_type_id"/>
                                    <field name="state"/>
                                    <field name="carrier_id"/>
                                    <field name="delivery_barcode"/>
                                </tree>
                            </field>
                        </group>
                       
                     </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_netaddiction_sales_Groupon_Order"
          name="Ordini Groupon"
          parent="menu_netaddiction_groupon_super"
          sequence="20"
          action= "netaddiction_groupon_order_base"
        />




<record id="view_netaddiction_Groupon_Register"
                model="ir.ui.view">
            <field name="name">netaddiction Groupon Register</field>
            <field name="model">netaddiction.groupon.register</field>
      <field name="arch" type="xml">
                <form string="Inserisci file"
                      class="oe_form_configuration">
                    <sheet>

                        <group string="Registra Ordini">
                            <field name="csv_file" />

                        </group>
                        


                        <group>
                            <button string="Registra"
                                    type="object"
                                    name="execute"
                                    class="oe_highlight"
                                    />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_netaddiction_Groupon_Register_menu"
                model="ir.actions.act_window">
            <field name="name">Registra Groupon</field>
            <field name="res_model">netaddiction.groupon.register</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
    </data>
</openerp>