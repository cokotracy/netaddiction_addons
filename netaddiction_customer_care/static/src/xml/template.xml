<?xml version="1.0" encoding="UTF-8"?>

<templates id="netaddiction_chatter" xml:space="preserve">
	<t t-extend="mail.Chatter">
		<t t-jquery=".o_chatter_topbar" t-operation="replace">
		 	<div class="o_chatter_topbar">
                <button type="button" class="btn btn-sm btn-primary o_chatter_button_new_message" title="Manda una e-mail">
                    Nuova E-mail
                </button>
                <button t-if="widget.options.display_log_button" class="btn btn-sm btn-link o_chatter_button_log_note" title="I followers non verranno notificati">
                    Nuova nota interna
                </button>
           	</div>
        </t>
	</t>

    <t t-extend="mail.ChatThread.Message">
        <t t-jquery=".o_mail_info" t-operation="replace">
                <p t-if="message.display_author" class="o_mail_info">
                    <t t-if="message.is_note">
                        <b style="color:#CF000F">Nota Interna da </b>
                    </t>
                    <t t-if="!message.is_note">
                        <b style="color:#26A65B">E-mail da </b>
                    </t>

                    <strong t-if="message.mailto">
                        <a class="o_mail_mailto" t-attf-href="mailto:#{message.mailto}?subject=Re: #{message.subject}">
                            <t t-esc="message.mailto"/>
                        </a>
                    </strong>
                    <strong t-if="!message.mailto &amp;&amp; message.author_id[0]"
                            data-oe-model="res.partner" t-att-data-oe-id="message.author_id[0]"
                            class="o_mail_redirect">
                        <t t-esc="message.displayed_author"/>
                    </strong>
                    <strong t-if="!message.mailto &amp;&amp; !message.author_id[0]">
                        <t t-esc="message.displayed_author"/>
                    </strong>

                    <small t-att-title="message.date">
                        - <t t-esc="message.hour"/>
                    </small>
                    <t t-if="message.model &amp;&amp; (message.model != 'mail.channel') &amp;&amp; options.display_document_link">
                        on <a class="o_mail_redirect" href="#" t-att-data-oe-model="message.model" t-att-data-oe-id="message.res_id"><t t-esc="message.record_name"/></a>
                    </t>
                    <t t-if="message.origin_id &amp;&amp; (message.origin_id !== options.channel_id)">
                        (from <a class="o_channel_redirect" t-att-data-oe-id="message.origin_id" href="#">#<t t-esc="message.origin_name"/></a>)
                    </t>
                </p>     
        </t>

        <t t-jquery=".o_thread_message_sidebar" t-operation="replace">
        </t>
    </t>

     <t t-extend="mail.ChatThread.Message">

        <t t-jquery=".o_composer_button_full_composer" t-operation="replace">
        </t>
     </t>

    <t t-extend="mail.chatter.ChatComposer">

        <t t-jquery=".o_chatter_composer_info" t-operation="replace">
        </t>
        <t t-jquery=".o_composer_button_full_composer" t-operation="replace">
        </t>
        <t t-jquery=".o_composer_input" t-operation="replace">
            <textarea class="o_composer_input" placeholder="Scrivi qualcosa..."/>
        </t>
    </t>

    
    

</templates>