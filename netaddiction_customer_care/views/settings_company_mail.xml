<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
    	<record model="ir.ui.view" id="netaddiction_cc_setting_company_mail_tree">
            <field name="name">netaddiction.project.issue.settings.companymail.tree</field>
            <field name="model">netaddiction.project.issue.settings.companymail</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_cc_setting_company_mail_form">
            <field name="name">netaddiction.project.issue.settings.companymail.form</field>
            <field name="model">netaddiction.project.issue.settings.companymail</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <form string="settings_mail form">
                    <sheet>
                    	<group colspan="4">
                        	<field name="company_id"/>
                        </group>
                       	<group colspan="4">
                        	<field name="email"/>
                    	</group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>