<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="netaddiction_view_order">
            <field name="name">netaddiction.sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header position="replace">
                    <header>

                        

                        <button name="action_done" type="object" string="Completato" states="sale,partial_done" class="btn btn-success fa fa-star"/>

                        <button name="action_partial_done" states="sale,problem" type="object" string="Parzialmente Completato"
                            class="btn btn-warning fa fa-star-half-o"/>

                        <button name="manual_confirm"  type="object" string="In lavorazione" class="btn btn-warning fa fa-star-o" attrs="{'invisible' : ['|',('state','!=','draft'),('pricelist_id','!=',%(product.list0)d)]}"/>
                        <button name="action_confirm"  type="object" string="In lavorazione" class="btn btn-warning fa fa-star-o" attrs="{'invisible' : ['|',('state','!=','draft'),('pricelist_id','=',%(product.list0)d)]}"/>
                        <button name="problem_confirm"  type="object" string="In lavorazione" class="btn btn-warning fa fa-star-o" attrs="{'invisible' : [('state','!=','problem')]}"/>

                        <button name="action_problems" string="Problema" type="object" states="sent,sale,processing,partial_done,draft" class=" btn btn-danger fa fa-exclamation-triangle"/>

                        <button name="action_cancel" states="draft,sent,sale,partial_done,problem,done" type="object" class=" btn btn-danger fa fa-trash" string="Annulla Ordine"/>

                        <button name="sale.action_view_sale_advance_payment_inv" string="Fattura" type="action" class="btn-primary fa fa-pencil-square-o" invisible="1"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,sale,done"/>

                    </header>
                    

                </header>

                <xpath expr="//field[@name='date_order']" position="replace">
                    <field name="date_order">
                    </field>
                </xpath>

                <xpath expr="//field[@name='partner_id']"
                    position="replace"> 
                    <field name="partner_id" domain="[('customer','=',True),('type','=','contact')]" context="{'search_default_customer':1, 'show_address': 0}" options="{&quot;always_reload&quot;: True}"/>          
                </xpath> 

                <xpath expr="//field[@name='partner_invoice_id']"
                    position="replace">    
                     <field name="partner_invoice_id" domain="[('type','=','invoice'),('parent_id','=',partner_id)]" groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice', 'show_address': 1}}"/>        
                </xpath> 

                <xpath expr="//field[@name='partner_shipping_id']"
                    position="replace">    
                     <field name="partner_shipping_id" domain="[('type','=','delivery'),('parent_id','=',partner_id)]" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery', 'show_address': 1}}"/>     
                </xpath> 

                


                <xpath expr="//field[@name='payment_term_id']"
                    position="replace">    
                    <field name="payment_term_id" options="{'no_create': True}" attrs="{'invisible':True}"/>           
                </xpath> 
                <xpath expr="//field[@name='validity_date']"
                    position="replace">    
                    <field name="validity_date" attrs="{'invisible':True}"/>           
                </xpath> 
               <!--  <xpath expr="//field[@name='pricelist_id']"
                    position="replace">    
                    <field name="pricelist_id" groups="product.group_sale_pricelist" attrs="{'invisible':True}"/>           
                </xpath>  -->
                <xpath expr="//field[@name='carrier_id']" position="attributes">  
                      <attribute name="attrs">
                        {'readonly': [('state', 'in', ('done','cancel','sale','partial_done','problem'))]}
                      </attribute>   
                </xpath> 

                <xpath expr="//field[@name='order_line']" position="attributes">  
                      <attribute name="attrs">
                        {'readonly': [('state', 'in', ('done','cancel','sale','partial_done','problem'))]}
                      </attribute>   
                </xpath> 

                <xpath expr="//notebook/page[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <notebook position="inside">
                    <page name="comment" string="Commento Cliente">
                        <field name="customer_comment" readonly="1"/>
                    </page>
                    <page name="duplicate" string="Duplicati">
                        <group name="Duplicate">
                            <field name="parent_order" readonly="1" />
                        </group>
                        
                        <b>Ordini Figli</b>
                        <field name="child_orders" readonly="1"/>

                    </page>
                </notebook>
            </field>
        </record>


        <record model="ir.ui.view" id="netaddiction_view_order_delivery">
            <field name="name">netaddiction.sale.order.delivery</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
            <field name="arch" type="xml">
                <field name="carrier_id" position="replace">
                    <field name="carrier_id" context="{'order_id': id}" class="oe_inline" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','in',('sent'))]}"/>
                </field>
            </field>
        </record>


         <record id="netaddiction_view_order_feature_search_view" model="ir.ui.view">
            <field name="name">netaddiction.order.search.view</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <search position="replace">
                    <search string="Search Sales Order">
                    <field name="name" string="Sales Order" filter_domain="['|',('name','ilike',self),('client_order_ref','ilike',self)]"/>
                    <field name="partner_id" operator="child_of"/>
                    <field name="product_id" filter_domain="[('product_id.barcode','=',self)]" string="Barcode Prodotto"/>
                    <field name="product_id" filter_domain="[('product_id.id','=',self)]" string="Id Prodotto"/>
                    <field name="product_id" string="Nome Prodotto"/>
                    <filter string="Nuovi" name="draft" domain="[('state','=','draft')]" />
                    <separator/>
                    <filter string="In Lavorazione" name="sales" domain="[('state','=','sale')]"/>
                    <filter string="Parzialmente Completati" domain="[('state','=','partial_done')]"/>
                    <filter string="Completati" domain="[('state','=','done')]"/>
                    <filter string="Prenotazione" domain="[('order_line.product_id.out_date','&gt;=',context_today().strftime('%%Y-%%m-%%d'))]"/>
                    <separator/>
                    <filter string="Problema" domain="[('state','=','problem')]"/>
                    <filter string="Annullati" domain="[('state','=','cancel')]"/>
                    <separator/>                   
                    <group expand="0" string="Group By">
                        <filter name="customer" string="Cliente" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Ordine Mese" domain="[]" context="{'group_by':'date_order'}"/>
                        <filter string="Listino Prezzi" domain="[]" context="{'group_by':'pricelist_id'}"/>
                    </group>

                     
                   </search>
                </search>

            </field>
        </record>
        

        <record model="ir.actions.act_window" id="sale.action_orders">
                   <field name="domain">[('state', '!=', 'sent')]</field>
        </record>



 <record model="res.groups" id="group_invisible">
        <field name="name">Hidden items</field>
    </record>

   <record id="sale.menu_sale_quotations" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, False, [ref('group_invisible')])]"/>
    </record>

    </data>
</openerp>