<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="netaddiction_view_order">
            <field name="name">netaddiction.sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header position="replace">
                    <header>

                        

                        <button name="action_done" type="object" string="Completato" states="sale,partial_done" class="btn btn-success fa fa-star"/>

                        <button name="action_partial_done" states="sale" type="object" string="Parzialmente Completato"
                            class="btn btn-warning fa fa-star-half-o"/>

                        <button name="action_confirm" states="draft,problem" type="object" string="In lavorazione" class="btn btn-warning fa fa-star-o"/>

                        <button name="action_problems" string="Problema" type="object" states="sent,sale,processing,draft" class=" btn btn-danger fa fa-exclamation-triangle"/>

                        <button name="action_cancel" states="draft,sent,sale,partial_done,problem" type="object" class=" btn btn-danger fa fa-trash" string="Cancella Ordine"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,sale,done"/>
                    </header>


                </header>
            </field>
        </record>


        <record model="ir.ui.view" id="netaddiction_view_order_delivery">
            <field name="name">netaddiction.sale.order.delivery</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
            <field name="arch" type="xml">
                <field name="carrier_id" position="replace">
                    <field name="carrier_id" context="{'order_id': id}" class="oe_inline" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','in',('sent'))]}"/>
                </field>
            </field>
        </record>

        
    </data>
</openerp>