<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_netaddiction_prontocampaign_importer"
                model="ir.ui.view">
            <field name="name">Importa Ordini da ProntoCampaign</field>
            <field name="model">netaddiction.tappetini.register</field>
      			<field name="arch" type="xml">
                <form string="Importazione Ordini da ProntoCampaign"
                      class="oe_form_configuration">
                    <sheet>
                        <div>
                            <button string="Registra"
                                    type="object"
                                    name="execute"
                                    class="oe_highlight"
                                    />
                            
                            <button string="Annulla"
                                    type="object"
                                    name="cancel"
                                    class="oe_link" />
                        </div>

                        <group string="Importazione ordini da ProntoCampaign">
                            <field name="prod_id" />
                            <field name="csv_file" />

						<field name="return_text" readonly="1" />


                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_netaddiction_prontocampaign_importer_menu"
                model="ir.actions.act_window">
            <field name="name">Importa da ProntoCampaign</field>
            <field name="res_model">netaddiction.tappetini.register</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>


        <menuitem id="menu_view_netaddiction_prontocampaign_importer"
          name="Importa prontocampaign"
          parent="base.view_view_custom_form"
          sequence="99"
          action= "action_netaddiction_prontocampaign_importer_menu"
        />

    </data>
</openerp>