<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <record id="registro_corrispettivi_config_form" model="ir.ui.view">
            <field name="name">Configurazioni Registro Corrispettivi</field>
            <field name="model">registro.corrispettivi.config</field>
            <field name="arch" type="xml">
                <form string="Configurazione" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <div id="main">
                        <group>
                            <field name="delivery_picking_type_ids"/>
                            <field name="refund_picking_type_ids"/>
                            <field name="multidelivery"/>
                            <field name="refund_delivery_cost"/>
                            <field name="product_contrassegno"/>
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <record id="corrispettivi_config_action" model="ir.actions.act_window">
            <field name="name">Registro Corrispettivi Config</field>
            <field name="res_model">registro.corrispettivi.config</field>
            <field name="view_id" ref="registro_corrispettivi_config_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="registro_corrispettivi_config_menu_2" name="Configurazioni Registro Corrispettivi"
                      parent="registro_corrispettivi.parent_corrispettivi" action="corrispettivi_config_action" sequence="1" groups="account.group_account_user"/>

        <record id="registro_corrispettivi_form" model="ir.ui.view">
            <field name="name">registro.corrispettivi.form</field>
            <field name="model">registro.corrispettivi</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_corrispettivi" class="btn-primary" type="object" string="Genera Corrispettivi" />
                    </header>  
                    <sheet>  
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" readonly="1" filename="filename"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="registro_corrispettivi_tree" model="ir.ui.view">
            <field name="name">registro.corrispettivi.tree</field>
            <field name="model">registro.corrispettivi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>