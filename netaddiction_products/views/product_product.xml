        <record model="ir.ui.view" id="netaddiction_product_form_view_sale_order_button">
            <field name="name">netaddiction.product.product.sale.order</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
            <field name="arch" type="xml">
                <button name="%(sale.action_product_sale_list)d" position="replace"/>
            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">netaddiction.product.product.form</field>
            <field name="model">product.product</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="attribute_value_ids" position="replace"/>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <separator string=""/>
                    <label for="attribute_value_ids" string="Attributi"/>
                    <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
                    <separator string=""/>
                </xpath>

                <button name="%(stock.action_view_change_product_quantity)d" position="replace">
                    <button name="%(stock.action_view_change_product_quantity)d"
                        string="Aggiorna QuantitÃ "
                        type="action"
                        attrs="{'invisible': [('type', '!=', 'product')]}"
                        groups="stock.group_stock_user"/>
                </button>
                <button  name="%(stock.act_make_procurement)d" position="replace">
                    <button
                        string="Richiesta Approvvigionamento"
                        type="action"
                        name="%(stock.act_make_procurement)d"
                        attrs="{'invisible': [('type', '!=', 'product')]}"
                        groups="stock.group_stock_user"/>
                </button>
                <!--forecasted,tolto per tutti-->
                <button name="%(stock.action_stock_level_forecast_report_product)d" position="replace"/>

                <div name="button_box" position="inside">
                    <field string="Bundle" name="bom_count" widget="statinfo"
                         groups="netaddiction_products.netaddiction_data_entry_user,mrp.group_mrp_user"
                         invisible="1"/>
                    <button class="oe_stat_button" name="action_view_bom" type="object"
                        attrs="{'invisible':['|',('type', 'not in', ['product', 'consu']),('bom_count','=',0)]}" icon="fa-flask">
                        <b >Bundle</b>
                    </button>
                    <button class="oe_stat_button" name="%(purchase.action_purchase_line_product_tree)d"
                           type="action" icon="fa-shopping-cart"
                           groups="stock.group_stock_user,purchase.group_purchase_user">
                        <field string="Acquisti" name="purchase_count" widget="statinfo"
                            groups="stock.group_stock_user,purchase.group_purchase_user"/>
                    </button>

                    <button class="oe_stat_button" name="%(sale.action_product_sale_list)d"
                        type="action" icon="fa-usd"
                        groups="stock.group_stock_user,purchase.group_purchase_user">
                        <field string="Vendite" name="sales_count" widget="statinfo" />
                    </button>

                </div>

                <notebook position="replace">
                    <notebook>
                        <page string="Informazioni Generali" name="information">
                            <group name="general" col="4">
                                <group name="group_general"  col="2" class="oe_left">
                                    <field name="type" on_change="onchange_type(type, context)"/>
                                    <field name="out_date"/>
                                    <field name="out_date_approx_type" />
                                    <field name="final_price" required="True" string="Prezzo Listino"/>
                                    <field name="special_price" string="Prezzo offerta base"/>
                                    <field name="lst_price" readonly="True" string="Prezzo di Vendita"/>
                                </group>
                                <group name="group_general_right"  col="2" class="oe_right">
                                    <field name="categ_id" options="{'no_create': True}"/>
                                    <field name="available_date" />
                                    <field name="company_id" groups="base.group_multi_company"
                                        options="{'no_create': True}"/>
                                    <field name="barcode" required="True"/>
                                     
                                    <field name="detax_price" readonly="True"/>
                                    <field name="intax_price" readonly="True"/>
                                    
                                </group>

                                <separator name="descr_separator"/>
                                <group name="descr" colspan="4">
                                    <b>Descrizione</b>
                                </group>
                                <group name="descr" colspan="4">
                                    <field name="description" nolabel="1" widget="html"/>
                                </group>
                            </group>
                        </page>
                        <page string="Inventario" name="inventory_netaddiction">
                            <group name="qtys"  col="4" >
                                <label for="qty_available"/>
                                <div>
                                    <field name="qty_available" class="oe_inline"/>
                                </div>
                                <field name="qty_available_now" class="oe_inline"/>
                                <label for="incoming_qty"/>
                                <div>
                                    <field name="incoming_qty" class="oe_inline"/>
                                </div>
                                <field name="outgoing_qty" class="oe_inline" />
                                <field name="virtual_available" class="oe_inline" string="QuantitÃ  Prevista"/>
                                <field name="qty_sum_suppliers" class="oe_inline"/>
                            </group>
                            <group string="Azioni quantitÃ " col="4">
                                <field name="qty_limit" class="oe_inline" />
                                <field name="limit_action" class="oe_inline" />
                                <field name="qty_single_order" class="oe_inline" />
                            </group>
                            <group string="Valorizzazione Inventario" col="4">
                                <field name="property_cost_method" default="real" readonly="1"/>
                                <field name="property_valuation" default="real_time" readonly="1"/>
                            </group>
                        </page>
                        <page string="Immagini" name="images">
                            <group class="netaddiction">
                                <field name="image_ids" widget="many2many_binary" string="Aggiungi" nolabel="1" class="oe_inline"/>
                            </group>
                        </page>
                        <page string="Extra Dati" name="extra_datas">
                            <field name="extra_data" readonly="1">
                                <tree string="extra_data_tree">
                                    <field name="key_type"/>
                                    <field name="key"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tasse" name="taxes_netaddiction">
                            <group name="taxes"  col="4" >
                                <field name="taxes_id" options="{'no_create': True}" widget="many2many_tags"/>
                                <field name="supplier_taxes_id" options="{'no_create': True}" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Fornitori" name="vendor_netaddiction">
                            <field name="seller_ids" widget="one2many">
                                <tree string="Seller_tree">
                                    <field name="name" string="Fornitore"/>
                                    <field name="product_code" string="Codice Fornitore"/>
                                    <field name="avail_qty"/>
                                    <field name="price"/>
                                    <field name="detax_margin"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="product_supplierinfo_form_view">
            <field name="name">netaddiction.product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <label for="price" position="before">
                    <label for="avail_qty"/>
                    <div>
                        <field name="avail_qty" class="oe_inline"/>
                    </div>
                </label>
            </field>
        </record>


        <record id="view_category_automation_form" model="ir.ui.view">
            <field name="name">netaddiction.product.category.form.view</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <group name="first" position="after">
                    <group>
                        <group name="netaddiction_category_product_automation" string="Automazione">
                            <field name="can_auto_deactivate_products"/>
                            <field name="auto_supplier_delay"/>
                        </group>
                    </group>
                </group>
            </field>
        </record>

        <record id="netaddiction_products_alias_view_list" model="ir.ui.view">
            <field name="name">netaddiction_products.alias.list</field>
            <field name="model">netaddiction_products.alias</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="netaddiction_products_alias_view_form" model="ir.ui.view">
            <field name="name">netaddiction_products.alias.form</field>
            <field name="model">netaddiction_products.alias</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="netaddiction_products_alias_action" model="ir.actions.act_window">
            <field name="name">Alias</field>
            <field name="res_model">netaddiction_products.alias</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="netaddiction_products_alias_view_list"/>
        </record>

    </data>
</openerp>
