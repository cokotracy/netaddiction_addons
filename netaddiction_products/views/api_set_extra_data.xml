<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="netaddiction_config_api_extra_data">
            <field name="name">Configurazione API per extra dati</field>
            <field name="res_model">netaddiction.extra.data.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain" eval=""/>
            <field name="help" type="html">
                <p>
                   
                </p>
            </field>
        </record>

        <menuitem id="netaddiction_config_api_extra_data_menu" parent="base.menu_custom" name="Config. Api Extra Data" sequence="90" action="netaddiction_config_api_extra_data" groups="base.group_system"/>

        <record model="ir.ui.view" id="netaddiction_config_api_extra_data_tree">
            <field name="name">netaddiction.config.api.extra.data.tree</field>
            <field name="model">netaddiction.extra.data.settings</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="category"/>
                    <field name="api_set"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_config_api_extra_data_form">
            <field name="name">netaddiction.config.api.extra.data.form</field>
            <field name="model">netaddiction.extra.data.settings</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <form string="settings_mail form">
                    <sheet>
                        <group colspan="4">
                            <field name="company_id"/>
                        </group>
                        <group colspan="4">
                            <field name="category"/>
                        </group>
                        <group colspan="4">
                            <field name="api_set"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>