<?xml version="1.0" encoding="UTF-8"?>

<templates id="netaddiction_show_templates_app" xml:space="preserve">
    <t t-name="block_new_allocation_show">
        <div class="block prod_title">
            <div class="block_title" style="border:none !important" t-attf-data-product="{{shelf.product_id}}">
                <t t-esc="shelf.product"/> - <t t-esc="shelf.barcode"/> - Max: <t t-esc="shelf.qty_available_now"/>
            </div>
        </div>
        
        <div t-foreach="shelf.allocations" t-as="all" class="block">
            <a href="#" class="select_shelf" t-attf-onclick="select_shelf_to_move(this)">
                <div class="block_content">
                    <t t-esc="all.shelf"/> - <b class="b_qty"><t t-esc="all.qty"/></b>
                </div>
                <div class="block_content modify hide_content" style="display:none">
                    <input type="tel" class="qta" t-attf-value="{{all.qty}}"/>
                    <input type="submit"  value="SPOSTA" class="move_show" t-attf-onclick="move_shelf({{all.line_id}},this)"/>
                </div>
            </a>
        </div> 
    </t>
</templates>