<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>

    <record model="ir.ui.view" id="netaddiction_show_form">
        <field name="name">view.netaddiction.shoe.form</field>
        <field name="model">netaddiction.show</field>
        <field name="arch" type="xml">
            <form string="show">
                <header>
                    <button name="create_csv" class="btn-primary" type="object" string="Crea Csv" attrs="{'invisible': [('state','=','close')]}"/>
                    <button name="import_csv" class="btn" type="object" string="Importa Csv Ritorno Fiera" attrs="{'invisible': [('state','=','close')]}"/>
                    <button name="close_show" class="btn" type="object" string="Chiudi Fiera" attrs="{'invisible': [('state','=','close')]}"/>
                    <button name="difference" class="btn" type="object" string="Calcola Differenze" attrs="{'invisible': [('state','!=','close')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="exit_value" readonly="1"/>
                            <field name="sale_stock_value" readonly="1"/>
                            <field name="export_file" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_finish" required="1"/>
                            <field name="exit_sell_value" readonly="1"/>
                            <field name="sale_sell_value" readonly="1"/>
                            <field name="import_file"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="quant_ids" string="Prodotti Partiti">
                            <field name="show_quant_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="stock_value"/>
                                    <field name="public_price"/>
                                </tree>
                            </field>
                        </page>
                        <page name="sell_ids" string="Prodotti Venduti">
                            <field name="show_sell_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="stock_value"/>
                                    <field name="public_price"/>
                                </tree>
                            </field>
                        </page>
                        <page name="returned_ids" string="Prodotti Tornati">
                            <field name="show_return_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                        <page name="report" string="Report">
                            <group>
                                <field name="report_file"/>
                            </group>
                            <field name="show_difference_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="gone"/>
                                    <field name="sell"/>
                                    <field name="returned"/>
                                    <field name="diff"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="netaddiction_show_tree">
        <field name="name">view.netaddiction.show.tree</field>
        <field name="model">netaddiction.show</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_finish"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="netaddiction_show_quant_tree">
        <field name="name">view.netaddiction.show.quant.tree</field>
        <field name="model">netaddiction.show.quant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="stock_value"/>
                <field name="public_price"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="netaddiction_show_quant_form">
        <field name="name">view.netaddiction.show.quant.form</field>
        <field name="model">netaddiction.show.quant</field>
        <field name="arch" type="xml">
            <form string="show">
                <header>

                </header>
                <sheet>
                        <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="date_move" required="1"/>
                        </group>
                        <group>
                            <field name="qty" required="1"/>
                            <field name="stock_value" required="1"/>
                            <field name="public_price" required="1"/>
                            <field name="pick_id" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="quant_ids" readonly="1">
                            <tree>
                                <field name="product_id"/>
                                <!-- <field name="qty"/> -->
                                <field name="location_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_netaddiction_show_returned_move" model="ir.ui.view">
        <field name="name">Ritorno Prodotti Fiera</field>
        <field name="model">netaddiction.show.returned.move</field>
        <field name="arch" type="xml">
            <form string="Ritorna Prodotto" class="oe_form_configuration">
                <sheet>
                    <group>
                        <field name="message" readonly="1"/>
                        
                        <field name="barcode" autofocus="1"/>
                        <field name="show_id" domain="[('state','=','close')]" required="1"/>
                        <field name="product_id" />
                        <field name="qty_available" />
                    
                        <field name="qty_to_move"/>
                        <field name="barcode_allocation"/>
                        <!-- <field name="new_allocation"/> -->
                    </group>
                    <group>
                    </group>
                    <div>
                        <button string="Vai"
                                type="object"
                                name="execute"
                                class="oe_highlight"
                                />
                    </div>
                </sheet>
            </form>
        </field>
    </record>


