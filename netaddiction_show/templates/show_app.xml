<openerp>
    <data>
        <template id="header_top">
            <head>
                <title>Netaddiction Show APP</title>

                <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                <meta http-equiv="content-type" content="text/html, charset=utf-8" />

                <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
                <meta name="format-detection" content="telephone=no" />

                <!--carico il file template dove ho i javascript e i css-->
                <t t-call-assets="web.assets_common"/>
                <t t-call-assets="web.assets_backend"/>
                <t t-call-assets="netaddiction_show.assets"/>
            </head>
        </template>

        <template id="top_menu">
            <div id="top_menu">
                <b class="top_title"><t t-esc="top_title" /></b>
                <a href="/" class="top_img top_menu" style="font-weight:bold;line-height:32px;">
                    LOG OUT
                </a>
            </div>
        </template>

        <template id="index">
            <t t-call="netaddiction_show.header_top"/>
            
                <t t-call="netaddiction_show.top_menu">
                    <t t-set="top_title" t-value="'SHOW APP'"/>
                </t>
                <div id="content">
                    <div id="show_new" class="block">
                        <div class="block_title">
                            NUOVE
                        </div>
                    </div>
                    <div t-foreach="show_new" t-as="show" class="block" >
                        <a t-attf-href="/show/{{show.id}}" class="wave_link">
                            <div t-attf-class="block_content"><b><t t-esc="show.name"/></b></div>
                        </a>
                    </div>

                    <div id="show_open" class="block" style="margin-top:50px !important">
                        <div class="block_title">
                            APERTE
                        </div>
                    </div>
                    <div t-foreach="show_open" t-as="show" class="block" >
                        <a t-attf-href="/show/{{show.id}}" class="wave_link">
                            <div t-attf-class="block_content"><b><t t-esc="show.name"/></b></div>
                        </a>
                    </div>
                </div>
            
        </template>

        <template id="show">
            <t t-call="netaddiction_show.header_top"/>

            <div id="top_menu">
                <a t-attf-href="/show" id="back">
                    <img class="top_img" src="/netaddiction_warehouse/static/src/img/_back.png"/>
                </a>
                <b class="top_title"><t t-esc="show.name" /></b>
                <a href="/" class="top_img top_menu" style="font-weight:bold;line-height:32px;">
                    LOG OUT
                </a>
            </div>
            <div id="content">
                <div id="barcode_form">
                    <label for="barcode" id="label_barcode">BARCODE</label>
                    <input type="text" name="barcode" id="barcode" autocomplete="off"/>
                    <input type="text" name="show_id" id="show_id" t-attf-value="{{show.id}}" style="display:none"/>
                    <input type="submit"  value="CERCA" id="search_barcode"/>
                </div>
                
                <div id="result"></div>
            </div>
        </template>

    </data>
</openerp>