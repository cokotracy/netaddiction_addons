<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="wallet_balance" name="Wallet Balance Page" priority="100">
        <t t-call="website.layout">
            <div class="container-fluid">
                <section class="s_big_picture">
                    <div class="container">
                        <form t-attf-action="/wallet/balance/confirm" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                            <div class="container-fluid"> 
                                <div class="col-md-12 text-center">
                                    <img class="img img-responsive col-xs-12 w-75 w-md-50 mt-3 mb-3" src="/netaddiction_theme_rewrite/static/src/img/pig-money.png"  alt="Odoo CMS - a big picture" style="max-width:100%"/>
                                    <h2>IL TUO SALDO</h2>
                                    <span class="currency" t-esc="wallet" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                    <div id="submit_wallet" class="d-block mt-5 mb-5">
                                        <a class="charge-coin" href="/add/wallet/balance">RICARICA IL TUO CONTO</a>
                                    </div>
                                    <u><a style="color:#000;" href="/my/wallet-transactions">Vai alle tue transazioni</a></u>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>