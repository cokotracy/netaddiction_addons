<openerp>
    <data>
    	<template id="allocation">
            <t t-call="netaddiction_warehouse.header"/>
                <t t-call="netaddiction_warehouse.top_menu">
                    <t t-set="top_title" t-value="'ALLOCA'"/>
                </t>
                <t t-call="netaddiction_warehouse.slide_menu"/>
                <div id="content">
		            <form action="/inventory/app/allocation/barcode" method="post" id="auto_form">
		            	<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
		                <label for="barcode">BARCODE PRODOTTO</label>
		                <input type="text" name="barcode" id="barcode" autocomplete="off"/>
		                <input type="submit" value="CERCA"/>
		            </form>
		        </div>
        </template>

        <template id="result_barcode">
            <t t-call="netaddiction_warehouse.header"/>
                <t t-call="netaddiction_warehouse.top_menu">
                    <t t-set="top_title" t-value="'ALLOCA'"/>
                </t>
                <t t-call="netaddiction_warehouse.slide_menu"/>
                <div id="content">
                    <t t-if="message_done">
                       <div class="done_msg"><t t-esc="message_done"/></div>
                    </t>

                	<p class="search_title">
                        <t t-esc="product.id"/> - <t t-esc="product.display_name"/> - <t t-esc="product.barcode"/>
                    </p>
                   
                    
                    <form t-foreach="allocations" t-as="alloc" class="allocation_list" action="/inventory/app/allocation/new_shelf" method="post">
                    	<input type="submit" name="allocation_id" t-attf-alloc_id="{{alloc.id}}" t-attf-value="{{alloc.wh_location_id.name}}"/>
                    	<label for="alloc_qty">QUANTITA' DA SPOSTARE</label>
                    	<input type="tel" name="alloc_qty" t-attf-value="{{alloc.qty}}" autocomplete="off"/>
                    	<label for="new_shelf">NUOVO RIPIANO</label>
                    	<input type="text" name="new_shelf" value="" autocomplete="off"/>
                        <input type="hidden" name="old_line_id" t-attf-value="{{alloc.id}}" />
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    </form>
                	
                </div>
        </template>
    </data>
</openerp>