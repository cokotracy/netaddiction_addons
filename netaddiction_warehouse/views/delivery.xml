<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="netaddiction_delivery_view_order">
            <field name="name">netaddiction.delivery.sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="pricelist_id" position="before">
                    <field name="delivery_option" required="True" attrs="{'readonly': [('state', 'in', ('done','cancel','sale','partial_done','sent','problem'))]}"/>
            	</field>
                <field name="carrier_id" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="netaddiction_delivery_picking">
            <field name="name">netaddiction.delivery.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">
                <field name="carrier_id" position="after">
                    <field name="delivery_barcode" readonly="True"/>
                </field>
                <field name="number_of_packages" position="after">
                    <field name="manifest" readonly="True"/>
                </field>
                <field name="location_id" position="after">
                     <field name="total_import" readonly="True"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_stock_date_shipping">
            <field name="name">netaddiction.stock.date.shippping</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="min_date" position="after">
                    <field name="date_of_shipping_home" readonly="True"/>
                    <field name="sale_id" attrs="{'invisible' : [('picking_type_id','!=',%(stock.picking_type_out)d)]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_delivery_carrier">
            <field name="name">netaddiction.delivery.carrier</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <field name="delivery_type" position="after">
                    <field name="time_to_shipping" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_search_picking_eave">
            <field name="name">netaddiction.search.picking.wave</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_filter"/>
            <field name="arch" type="xml">
                <search>
                    <filter name="acquisti" string="Carico" domain="[('in_exit','=',True)]"/>
                    <filter name="uscita" string="Clienti" domain="[('in_exit','=',False)]"/>
                    <separator/>
                    <filter name="Today" string="Oggi" domain="[('date_done','&gt;',(context_today()).strftime('%Y-%m-%d 00:00:00'))]"/>
                    <filter name="Yesterday" string="Ieri" domain="[('date_done','&gt;',(context_today()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00'),('date_done','&lt;',(context_today()).strftime('%Y-%m-%d 00:00:00')))]"/>
                    <field name="supplier"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_picking_wave_form">
            <field name="name">netaddiction.picking_wave_form</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_form"/>
            <field name="arch" type="xml">

                <field name="user_id" position="before">
                    <field name="in_exit" invisible="1"/>
                    <field name="supplier" attrs="{'invisible':[('in_exit','=',False)]}"/>
                    <field name="date_done"/>
                </field>
                <field name="user_id" position="attributes">
                    <attributes name="invisible">1</attributes>
                </field>
                <field name="picking_ids" position="after">
                    <br/>
                    <br/>
                    <separator/>
                    <notebook>
                        <page string="Prodotti" name="product">
                            <field name="product_list_product"/>
                        </page>
                        <page string="Movimentazioni Effettuate" name="move">
                            <field name="product_list">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="qty_done"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    

                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_picking_wave_tree">
            <field name="name">netaddiction.picking_wave_tree</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="replace">
                    <field name="supplier"/>
                    <field name="date_done"/>
                </field>
            </field>
        </record>
    </data>
</openerp>