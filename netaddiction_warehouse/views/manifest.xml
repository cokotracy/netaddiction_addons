<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="netaddiction_warehouse_assets_backend_manifest" name="netaddiction_warehouse_assets_backend_manifest" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/netaddiction_warehouse/static/src/js/spara_pacchi.js"/>
            </xpath>
        </template>

    	<record model="ir.ui.view" id="netaddiction_warehouse_manifest_tree">
            <field name="name">netaddiction.warehouse.manifest.tree</field>
            <field name="model">netaddiction.manifest</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="carrier_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_warehouse_manifest_form">
            <field name="name">netaddiction.warehouse.manifest.form</field>
            <field name="model">netaddiction.manifest</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <form string="settings_mail form">
                    <header>
                        <button name="send_manifest" class="btn-primary" type="object" string="Invia Manifest" />
                        <button name="create_manifest" class="btn-primary" type="object" string="Crea Manifest" />
                    </header>
                    <sheet>
                       	<group colspan="4">
                       		<group>
                        		<field name="carrier_id" readonly="1"/>
                        	</group>
                        	<group>
                        		<field name="date" readonly="1"/>
                        		<field name="manifest_file1" readonly="1"/>
                                <field name="manifest_file2" readonly="1"/>
                        	</group>
                    	</group>
                        <group colspan="4">
                            <field name="delivery_ids" >
                            	<tree name="delivery" >
                            		<field name="name"/>
                            		<field name="origin"/>
                            		<field name="partner_id"/>
                            		<field name="carrier_id"/>
                            		<field name="delivery_barcode"/>
                            		<field name="delivery_read_manifest"/>
                            		<field name="state"/>
                            	</tree>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="netaddiction_manifest_settings" model="ir.ui.view">
            <field name="name">Configura Manifest</field>
            <field name="model">netaddiction.manifest.settings</field>
            <field name="arch" type="xml">
                <form string="Manifest" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object"
                            name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object"
                            name="cancel" class="oe_link"/>
                    </header>
                    <group string="Generali">
                        <div>
                            <label for="contrassegno_id"/>
                            <field name="contrassegno_id"/>
                        </div>
                    </group>
                    <group string="Bartolini">
                        <label for="id" string="Bartolini"/>
                        <div>
                            <div>
                                <label for="bartolini_prefix_file1"/>
                                <field name="bartolini_prefix_file1"/>
                            </div>
                            <div>
                                <label for="bartolini_prefix_file2"/>
                                <field name="bartolini_prefix_file2"/>
                            </div>
                            <div>
                                <label for="bartolini_path"/>
                                <field name="bartolini_path"/>
                            </div>
                            
                        </div>
                    </group>
                    <group string="SDA">
                        <label for="id" string="SDA"/>
                        <div>
                            <div>
                                <label for="sda_path"/>
                                <field name="sda_path"/>
                            </div>
                            
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="netaddiction_manifest_settings_action" model="ir.actions.act_window">
            <field name="name">Configura Manifest</field>
            <field name="res_model">netaddiction.manifest.settings</field>
            <field name="view_id" ref="netaddiction_manifest_settings"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="netaddiction_manifest_settings_menu" name="Configura Manifest"
            parent="netaddiction_warehouse.netaddiction_warehouse_manifest" action="netaddiction_manifest_settings_action"/>
    </data>
</openerp>