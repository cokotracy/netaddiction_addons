<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="netaddiction_warehouse_view_order">
            <field name="name">netaddiction.warehouse.sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="state" position="before">
            		<field name="is_reversible" invisible="1"/>
            		<button name="netaddiction_warehouse.action_reso_cliente" string="Reso" type="action" class="btn-primary" attrs="{'invisible': ['|',('state', 'not in', ('done','partial_done')),('is_reversible','=',False)]}" />
            	</field>
            	<xpath expr="//button[@name='action_view_invoice']" position="before">
                    <button type="object" name="open_reverse" class="oe_stat_button" attrs="{'invisible': [('count_reverse', '=', 0)]}" context="{'search_default_origin': name}" icon="fa-exchange">
                        <field  string="# Resi" name="count_reverse" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='qty_delivered']"
                    position="after">    
                    <field name="qty_reverse" />    
                </xpath> 

                
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_delivery_set">
            <field name="name">netaddiction.delivery.set</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
            <field name="arch" type="xml">
                <button name="delivery_set" position="replace"/>
            </field>
        </record>

        <record id="netaddiction_order_tree_reverse" model="ir.ui.view">
            <field name="name">netaddiction.order.tree.reverse</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                
                <field name="state" position="after">
                    <field name="count_reverse"/>
                </field>
            </field>
        </record>

        
    </data>
</openerp>