<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record model="ir.actions.act_window" id="netaddiction_warehouse_operation_config">
            <field name="name">Configurazione Operazioni di Magazzino/Reso</field>
            <field name="res_model">netaddiction.warehouse.operations.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain" eval=""/>
            <field name="help" type="html">
                <p>
                   
                </p>
            </field>
        </record>

        <menuitem id="netaddiction_warehouse_operation_config_menu" parent="stock.menu_warehouse_config" name="Config. Resi" sequence="90" action="netaddiction_warehouse_operation_config" groups="base.group_system"/>

        <record model="ir.ui.view" id="netaddiction_warehouse_operation_config_tree">
            <field name="name">netaddiction.warehouse.operations.settings.tree</field>
            <field name="model">netaddiction.warehouse.operations.settings</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id"/>
                    <field name="netaddiction_op_type"/>
                    <field name="operation"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_warehouse_operation_config_form">
            <field name="name">netaddiction.warehouse.operations.settings.form</field>
            <field name="model">netaddiction.warehouse.operations.settings</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="arch" type="xml">
                <form string="settings_mail form">
                    <sheet>
                    	<group colspan="4">
                        	<field name="company_id"/>
                        </group>
                       	<group colspan="4">
                        	<field name="netaddiction_op_type"/>
                    	</group>
                        <group colspan="4">
                            <field name="operation"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>