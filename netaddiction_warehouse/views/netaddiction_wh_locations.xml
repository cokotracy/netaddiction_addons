<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="netaddiction_wh_locations_tree" model="ir.ui.view">
        <field name="name">view.netaddiction_wh_locations</field>
        <field name="model">netaddiction.wh.locations</field>
        <field name="arch" type="xml">
            <tree name="Bonus list">
                <field name="name"/>
                <field name="barcode"/>
                <field name="company_id"/>
                <field name="stock_location_id"/>
            </tree>
        </field>
    </record>

    <record id="netaddiction_wh_locations_form" model="ir.ui.view">
        <field name="name">view.netaddiction_wh_locations</field>
        <field name="model">netaddiction.wh.locations</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <group string="Allocazione Interna" name="location" colspan="4">
                        <group name="loc_left" class="oe_left" col="2">
                            <field name="name"/>
                            <field name="barcode"/>
                        </group>
                        <group name="loc_r" class="oe_right" col="2">
                            <field name="company_id"/>
                            <field name="stock_location_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="netaddiction_wh_locations_base" model="ir.actions.act_window">
        <field name="name">Allocazioni Magazzino</field>
        <field name="res_model">netaddiction.wh.locations</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Non ci sono Allocazioni.</p>
        </field>
    </record>

</odoo>
