<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- CONFIGURAZIONE MANIFEST -->
    <record id="netaddiction_manifest_settings" model="ir.ui.view">
        <field name="name">Configura Manifest</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Manifest" class="oe_form_configuration">
                <header>
                    <button string="Save"
                            type="object"
                            name="execute"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel"
                            type="object"
                            name="cancel"
                            class="oe_link"/>
                </header>
                <group string="Generali">
                    <div>
                        <label for="contrassegno_id"/>
                        <field name="contrassegno_id"/>
                    </div>
                </group>
                <group string="Bartolini">
                    <label for="id" string="Bartolini"/>
                    <div>
                        <div>
                            <label for="bartolini_prefix_file1"/>
                            <field name="bartolini_prefix_file1"/>
                        </div>
                        <div>
                            <label for="bartolini_prefix_file2"/>
                            <field name="bartolini_prefix_file2"/>
                        </div>

                    </div>
                </group>

            </form>
        </field>
    </record>

    <record id="netaddiction_manifest_settings_action" model="ir.actions.act_window">
        <field name="name">Configura Manifest</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="netaddiction_manifest_settings"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <!-- CONFIGURAZIONE TEMPI SPEDIZIONE -->
    <record id="netaddiction_shipping_time_setting" model="ir.ui.view">
        <field name="name">Configura Orari Spedizioni</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Orari Spedizioni" class="oe_form_configuration">
                <header>
                    <button string="Save"
                            type="object"
                            name="execute"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel"
                            type="object"
                            name="cancel"
                            class="oe_link"/>
                </header>
                <group>
                    <div>
                        <div>
                            <label for="hour_available"/>
                            <field name="hour_available"/>
                        </div>
                        <div>
                            <label for="hour_not_available"/>
                            <field name="hour_not_available"/>
                        </div>
                        <div>
                            <label for="shipping_days"/>
                            <field name="shipping_days"/>
                        </div>
                    </div>
                </group>
            </form>
        </field>
    </record>

    <record id="netaddiction_shipping_time_settings_action" model="ir.actions.act_window">
        <field name="name">Configura Orari Spedizioni</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="netaddiction_shipping_time_setting"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

</odoo>
