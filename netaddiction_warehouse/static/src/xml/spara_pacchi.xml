<?xml version="1.0" encoding="UTF-8"?>

<templates id="netaddiction_warehouse_spara_pacchi" xml:space="preserve">
    <t t-name="dialog_content_spara_pacchi">
    	<select id="select_carrier">
	        <option value="" selected="selected"></option>
	        <t t-foreach="carriers" t-as="carrier">
	        	<option t-attf-value="{{carrier.id}}"><t t-esc="carrier.name"/></option>
	        </t>
	    </select>
   	</t>

   	<t t-name="top_block">
   		<div class="oe-control-panel">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 oe-cp-title">
                        <ol class="oe-view-title breadcrumb"><li class="active">Spara Pacchi <b><t t-esc="title"/></b></li></ol>
                    </div>
                    <div class="oe-cp-search-view col-md-6">
                        <div class="oe_searchview form-control input-sm">
                        <div class="oe_searchview_search fa fa-lg fa-search" title="Cerca ancora"></div>
                        <div class="oe_searchview_facets">
                            <input type="text" id="search" name="search" placeholder="Cerca per barcode pacco"/>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 oe-button-column">
                        <div class="oe-cp-buttons">
                            <div class="oe_list_buttons">
                                <span>Data: </span> - <span><t t-esc="widget.date"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" id="right_pager">
                        
                    </div>
                </div>
            </div>
        </div>
        <div id="content_spara_pacchi">

        </div>
   	</t>

   	<t t-name="carrier_spara_pacchi">
   		<t t-call="top_block">
		    <t t-set="title" >
		    	<t t-esc="widget.carrier.name"/>
		    </t>
		</t>
   	</t>

    <t t-name="table">
        <table class="oe_list_content" id="purchase_in_product_list">
        <thead>
            <tr class="oe_list_header_columns">
                <th>
                  Spedizione
                </th>
                <th>
                  Ordine
                </th>
                <th>
                  Barcode
                </th>
                <th>
                  Cliente
                </th>
            </tr>
        </thead>
        <tfoot>
            <tr>
        </tr>
        </tfoot>
        <tbody>
          <t t-foreach="widget.picks" t-as="pick">
            <tr t-attf-data-id="{{pick.id}}"  class="pick_line">
              <td>
                <t t-esc="pick.name"/> 
              </td>
              <td>
                <t t-esc="pick.origin"/> 
              </td>
              <td>
                <t t-esc="pick.delivery_barcode"/> 
              </td>
              <td>
                <t t-esc="pick.partner_id[1]"/> 
              </td>
            </tr>
          </t>
        </tbody>
        </table>
    </t>
</templates>