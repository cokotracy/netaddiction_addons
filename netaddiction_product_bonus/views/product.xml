<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_form">
            <field name="name">product.product.netaddiction.bonus_product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="active" position="before">
                    <field name="is_bonus" readonly="True"/>
                </field>
                <notebook>
                    <page string="Bonus Associati" attrs="{'invisible':[('is_bonus', '=', True)]}">
                        <field name="bonus_products" />
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
