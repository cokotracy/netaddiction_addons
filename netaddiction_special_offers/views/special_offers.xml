<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="netaddiction_special_offers_catalog_base">
            <field name="name">Offerte Catalogo</field>
            <field name="res_model">netaddiction.specialoffer.catalog</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Non ci sono offerte sul catalogo.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="netaddiction_special_offers_cart_base">
            <field name="name">Offerte Carrello</field>
            <field name="res_model">netaddiction.specialoffer.cart</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Non ci sono offerte sul carrello.
                </p>
            </field>
        </record>

        <menuitem id="menu_netaddiction_special_offers"
          name="Offerte Menu"
          parent="base.menu_sales"
          sequence="16"
        />

        <menuitem id="submenu_netaddiction_special_offers_catalog"
          name="Offerte Catalogo" parent="menu_netaddiction_special_offers"
          action="netaddiction_special_offers_catalog_base"/>

        <record model="ir.ui.view" id="netaddiction_special_offers_catalog_tree">
            <field name="name">view.netaddiction_special_offers_catalog_tree</field>
            <field name="model">netaddiction.specialoffer.catalog</field>
            <field name="arch" type="xml">
                <tree name="special_offers_catalog list">
                    <field name="name"/>
                    <field name="author_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_special_offers_catalog_form">
            <field name="name">view.netaddiction_special_offers_catalog_form</field>
            <field name="model">netaddiction.specialoffer.catalog</field>
            <field name="arch" type="xml">
                <form string="special_offers_catalog Form">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_no_one" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name" placeholder="Titolo offerta catalogo..."/></h1>
                    </div>
                        <group string="Offerta" name="so_cat" colspan="4">
                            <group name="loc_left" class="oe_left" col="2">
                                <field name="author_id"/>
                                <field name="company_id"/>
                                <field name="qty_max_buyable"/>
                                <field name="qty_limit"/>
                                <field name="priority"/>
                            </group>
                             <group name="loc_right" class="oe_right" col="2">
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="qty_min"/>
                                <field name="qty_selled"  attrs="{'readonly': 1}"/>
                            </group>
                        </group>
                        <group string="Espressioni" name="conditions" colspan="2">
                            <group name="loc_left" class="oe_left" col="2">
                               <field name="expression_id"/> 

                            </group>
                         </group>
                        <field name="list_prod" />
                     </sheet>
                </form>
            </field>
        </record>

        <menuitem id="submenu_netaddiction_special_offers_cart"
          name="Offerte Carrello" parent="menu_netaddiction_special_offers"
          action="netaddiction_special_offers_cart_base"/>

        <record model="ir.ui.view" id="netaddiction_special_offers_cart_tree">
            <field name="name">view.netaddiction_special_offers_cart</field>
            <field name="model">netaddiction.specialoffer.cart</field>
            <field name="arch" type="xml">
                 <tree name="special_offers_catalog list">
                    <field name="name"/>
                    <field name="author_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_special_offers_cart_form">
            <field name="name">view.netaddiction_special_offers_cart_form</field>
            <field name="model">netaddiction.specialoffer.cart</field>
            <field name="arch" type="xml">
                <form string="Condition Form">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_no_one" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Titolo offerta carrello..."/></h1>
                    </div>
                        <group string="Offerta" name="so_cat" colspan="4">
                        
                            <group name="loc_left" class="oe_left" col="2">
                                <field name="author_id"/>
                                <field name="company_id"/>
                                <field name="priority"/>
                            </group>
                             <group name="loc_right" class="oe_right" col="2">
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <group string="Espressioni" name="conditions" colspan="2">
                            <group name="loc_left" class="oe_left" col="2">
                               <field name="expression_id"/> 

                            </group>
                         </group>
                          
                        <field name="list_prod" />
                    </sheet>
                </form>
            </field>
        </record>


