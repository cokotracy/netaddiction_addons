        <record model="ir.ui.view" id="netaddiction_special_offers_catalog_form">
            <field name="name">view.netaddiction_special_offers_catalog_form</field>
            <field name="model">netaddiction.specialoffer.catalog</field>
            <field name="arch" type="xml">
                <form string="special_offers_catalog Form">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" attrs="{'invisible':[('active', '=', False)]}">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                            <button name="turn_on" type="object" class="oe_stat_button" icon="fa-archive" attrs="{'invisible':[('active', '=', True)]} " string="Riattiva"/>

                        </div>

                    <div class="oe_title">
                        <h1><field name="name" placeholder="Titolo offerta catalogo..."/></h1>
                    </div>
                        <group string="Offerta" name="so_cat" colspan="4">
                            <group name="loc_left" class="oe_left" col="2">
                                <field name="author_id"/>
                                <field name="company_id"/>
                                <field name="priority"/>
                                <field name="id"  attrs="{'invisible': True}"/>
                             
                            
                            </group>
                             <group name="loc_right" class="oe_right" col="2">
                                <field name="date_start" widget="datetime"/>
                                <field name="date_end"/>
                                <field name="qty_selled"  attrs="{'readonly': 1}"/>
                                
                            </group>
                        </group>
                        <div >
                        <group  name="conditions" colspan="2" string= "opzioni offerta" >
                            <group name="loc_left" class="oe_left" col="2">
                                <field name="qty_max_buyable"/>
                                <field name="qty_limit"/>
                                <field name="qty_min"/>
                                <field name="offer_type" widget="radio"/>
                                <field name="fixed_price" attrs="{'invisible':[('offer_type', '!=', 1)]}"/>
                                <field name="percent_discount" attrs="{'invisible':[('offer_type', '!=', 2)]}" />
                                <field name="percent_rounded_down" attrs="{'invisible':[('offer_type', '!=', 2)]}" />
                                <field name="qty_limit_is_available"/>
                                <button  class="oe_highlight" name="modify_products" 
                                string="applica ai prodotti" type="object" /> 

                                
                            </group>
                            
                         </group>
                        <group  name="conditions" colspan="2" string= "espressione" >
                            <group name="loc_left" class="oe_left" col="2">
                                                               <field name="expression_id"/> 
                            </group>
                            <group name="loc_left" class="oe_right" col="3">
                               <button  class="oe_highlight" name="populate_products_from_expression" 
                                string="inserisci espressione" type="object" /> 
                               <button  class="oe_highlight" name="remove_products" 
                                string="rimuovi prodotti" type="object" /> 

                        </group>
                            
                         </group>
                     </div>
                  


   
                     <h1 >Lista Prodotti</h1>
                     <field name="products_list" mode="tree" >
                        
                                  <tree string="Sales Order Lines" editable="bottom">
                                    <field name="product_id" />
                                    <field name="product_qty_available_now"/>
                                     <field name="qty_max_buyable" />
                                      <field name="qty_limit" />
                                       <field name="qty_min" />
                                        <field name="offer_type"/>
                                        <field name="fixed_price" attrs="{'invisible':[('offer_type', '!=', 1)]}"/>
                                        <field name="product_offer_price_fake" />
                                <field name="med_inventory_value_intax"/>
                                    <field name="percent_discount" attrs="{'invisible':[('offer_type', '!=', 2)]}" />
                                    <field name="qty_selled" attrs="{'readonly': 1}" />
                                    <field name="priority" attrs="{'readonly': 1}"/>
                                    <field name="active" />
                                 
                                </tree>
                              </field>

                    <group>
                        <group>
                            <button name="get_pid_list" type="object" string="Genere Lista Id Prodotti"/>
                        </group>
                        <group>
                            <field name="pid_list"/>
                        </group>
                    </group>

                     </sheet>
                </form>
            </field>
        </record>

