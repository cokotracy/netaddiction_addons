<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_coupon_program_view_promo_program_digital_bonus_form" model="ir.ui.view">
        <field name="name">sale.coupon.program.view.promo.program.digital.bonus.form</field>
        <field name="model">sale.coupon.program</field>
        <field name="inherit_id" ref="sale_coupon.sale_coupon_program_view_promo_program_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group/group/field[@name='reward_product_id']/.." position="attributes">
                <attribute name="attrs">{'invisible': [('reward_type', '=', 'digital_bonus')]}</attribute>
            </xpath>
            <xpath expr="/form/sheet/group/group/field[@name='reward_product_id']/.." position="after">
                <group attrs="{'invisible': [('reward_type', '!=', 'digital_bonus'), ('digital_bonus_id', '=', False)]}">
                    <field name='digital_bonus_id'/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="sale_coupon_program_view_digital_bonus_form" model="ir.ui.view">
        <field name="name">sale.coupon.program.view.digital.bonus.form</field>
        <field name="model">sale.coupon.program</field>
        <field name="inherit_id" ref="sale_coupon.sale_coupon_program_view_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group/group/field[@name='reward_product_id']/.." position="attributes">
                <attribute name="attrs">{'invisible': [('reward_type', '=', 'digital_bonus')]}</attribute>
            </xpath>
            <xpath expr="/form/sheet/group/group/field[@name='reward_product_id']/.." position="after">
                <group attrs="{'invisible': [('reward_type', '!=', 'digital_bonus'), ('digital_bonus_id', '=', False)]}">
                    <field name='digital_bonus_id'/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
