<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="netaddiction_pricelist_b2b">
            <field name="name">netaddiction.product.pricelist.b2b</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <field name="item_ids" position="before">
                    <group>
                        <group>
                            <field name="expression"/>
                            <field name="percent_price"/>
                        </group>
                        <group>
                            <button type="object" name="populate_item_ids_from_expression" string="Aggiungi Prodotti" class="btn btn-primary oe_edit_only"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="carrier_price"/>
                        </group>
                        <group>
                            <field name="carrier_gratis"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>