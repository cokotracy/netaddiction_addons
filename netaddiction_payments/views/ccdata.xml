<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="netaddiction_payement_ccdata_base">
            <field name="name">Carte</field>
            <field name="res_model">netaddiction.partner.ccdata</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Non ci sono CC.
                </p>
            </field>
        </record>

        <menuitem id="menu_netaddiction_ccdata"
          name="Carte"
          parent="base.menu_sales"
          sequence="12"
            action="netaddiction_payement_ccdata_base"
        />

        <record model="ir.ui.view" id="netaddiction_payement_ccdata_tree">
            <field name="name">view.netaddiction_payement_ccdata_tree</field>
            <field name="model">netaddiction.partner.ccdata</field>
            <field name="arch" type="xml">
                <tree name="Carte list">
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="last_four"/>
                    <field name="default"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="netaddiction_payement_ccdata_form">
            <field name="name">view.netaddiction_payement_ccdata_form</field>
            <field name="model">netaddiction.partner.ccdata</field>
            <field name="arch" type="xml">
                <form string="Carte Form">
                    <sheet>
                        <group string="Carte" name="gift" colspan="4">
                            <group name="loc_left" class="oe_left" col="2">
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="last_four"/>
                    <field name="default"/>
                            </group>
                <group name="loc_right" class="oe_right" col="2">
                    <field name="year"/>
                    <field name="month"/>
                    <field name="name"/>
                    <field name="token"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>






        <record model="ir.ui.view" id="netaddiction_view_customer_ccdata">
            <field name="name">netaddiction.view.customer.ccdata</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position='after'>  
                <page string="Carte" name="ccdata_netaddiction">
                    <group name="loc_left" class="oe_left" col="2">
                            <field name="ccdata_id" />
                    </group>     
                </page>
                </xpath>
            </field>
        </record>





    </data>
</openerp>




